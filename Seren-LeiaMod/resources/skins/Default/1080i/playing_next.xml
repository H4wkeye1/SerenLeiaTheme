<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3012</defaultcontrol>
    <zorder>10</zorder>
    <controls>
        <control type="label" id="3000"><visible>false</visible></control>
        <control type="label" id="3002"><visible>false</visible></control>
        <control type="group">
            <include>Animation.FadeIn.Slide</include>
            <include>Animation.FadeOut</include>
            <right>1600</right>
            <bottom>860</bottom>
            <width>310</width>
            <height>160</height>				
			<control type="image">
				<left>-1</left>
				<top>-1</top>			
				<height>162</height>
				<width>312</width>                           
				<texture colordiffuse="Box2" background="true">common/box2.png</texture>   
				<visible>!Skin.HasSetting(thumbnails.white)</visible>                        
			</control>			
            <control type="label" description="text">
                <top>-64</top>
                <left>0</left>
                <right>20</right>
                <height>64</height>
                <aligny>center</aligny>
                <font>Small</font>
                <label>Up next in [COLOR $VAR[ColorHighlight]]$INFO[Player.TimeRemaining(ss),,][/COLOR] seconds...</label>
                <textcolor>ffededed</textcolor>
                <shadowcolor>bf000000</shadowcolor>
            </control>
            <control type="image" description="fanart">
                <width>100%</width>
                <height>100%</height>
                <fadetime>350</fadetime>
                <aspectratio scalediffuse="false">scale</aspectratio>
                <texture>$INFO[Player.Art(fanart)]</texture>
            </control>  
            <control type="label" description="text">
                <left>350</left>
                <right>260</right>
                <height>64</height>
                <bottom>60</bottom>
                <aligny>center</aligny>
                <font>Small</font>
                <label>$INFO[Window.Property(item.info.tvshowtitle)] - $INFO[Window.Property(item.info.season),S,]$INFO[Window.Property(item.info.episode),E, - ]$INFO[Window.Property(item.info.title)]</label>
                <textcolor>PanelWhite100</textcolor>
            </control>
            <control type="button" id="3001">
                <description>Play</description>
                <right>-180</right>
                <bottom>0</bottom>
                <width>144</width>
                <height>48</height>
                <label>Next</label>
                <align>center</align>
                <aligny>center</aligny>
                <textoffsetx>0</textoffsetx>
                <onleft>3013</onleft>
                <onright>3013</onright>
                <font>font12</font>
                <textcolor>PanelWhite100</textcolor>
                <focusedcolor>PanelWhite100</focusedcolor>
                <texturefocus colordiffuse="$VAR[ColorHighlight]" border="5">common/box.png</texturefocus>
                <texturenofocus colordiffuse="40f5f5f5" border="5">common/box.png</texturenofocus>
            </control>
            <control type="image">
                <description>Play</description>
                <right>-148</right>
                <bottom>16</bottom>
                <width>32</width>
                <height>32</height>
                <texture>indicator/playwhite.png</texture>
                <aspectratio>keep</aspectratio>
                <animation effect="fade" start="100" end="0" time="0" condition="!Control.HasFocus(3012)">Conditional</animation>
            </control>
            <control type="button" id="3002">
                <description>Cancel</description>
                <right>-300</right>
                <bottom>0</bottom>
                <width>96</width>
                <height>48</height>
                <label>Stop</label>
                <align>center</align>
                <aligny>center</aligny>
                <textoffsetx>0</textoffsetx>
                <onleft>3012</onleft>
                <onright>3012</onright>
                <font>Font12</font>
                <textcolor>PanelWhite100</textcolor>
                <focusedcolor>PanelWhite100</focusedcolor>
                <texturefocus colordiffuse="$VAR[ColorHighlight]" border="5">common/box.png</texturefocus>
                <texturenofocus colordiffuse="40f5f5f5" border="5">common/box.png</texturenofocus>
            </control>
            <control type="image">
                <description>Play</description>
                <right>-420</right>
                <bottom>0</bottom>
                <width>32</width>
                <height>32</height>
                <texture>indicator/close.png</texture>
                <aspectratio>keep</aspectratio>
                <animation effect="fade" start="100" end="0" time="0" condition="!Control.HasFocus(3013)">Conditional</animation>
            </control>
        </control>
    </controls>
</window>